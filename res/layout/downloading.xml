<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/downloadingListview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/list_divider_line_img"
        android:dividerHeight="1dip"
        android:drawSelectorOnTop="false"
        android:fadingEdge="none"
        android:fastScrollEnabled="true"
        android:footerDividersEnabled="true"
        android:listSelector="@android:color/transparent"
        android:scrollbars="vertical"
        android:scrollingCache="false" >
    </ListView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/startDownloadAll"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="0.5dip"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/download_all_begin_icon_img"
                android:drawablePadding="10dip"
                android:gravity="center"
                android:paddingLeft="2dip"
                android:text="@string/downloadAll"
                android:textColor="#505050" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pauseDownloadAll"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="0.1dip"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:clickable="true"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/download_all_pause_icon_img"
                android:drawablePadding="10dip"
                android:gravity="center"
                android:text="@string/pauseAll"
                android:textColor="#505050" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>