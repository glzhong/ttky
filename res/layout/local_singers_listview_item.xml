<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_content"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dip"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/header_parent"
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@drawable/list_header_bg" >

        <TextView
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:text="A"
            android:textColor="#313131"
            android:textSize="14sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/singerImage"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_below="@id/header_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:src="@drawable/list_item_artist_defalut_img" />

    <TextView
        android:id="@+id/singerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@id/singerImage"
        android:text="刘德华"
        android:textColor="#505050"
        android:textSize="14sp" >
    </TextView>

    <TextView
        android:id="@+id/songCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/singerName"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="15dip"
        android:layout_toRightOf="@id/singerImage"
        android:text="30首歌曲"
        android:textColor="#7b7b7b"
        android:textSize="12sp" >
    </TextView>
    
    <LinearLayout
        android:layout_width="wrap_content"
         android:layout_height="fill_parent"
         android:layout_toRightOf="@id/singerName"
         android:layout_marginRight="20dip"
         android:layout_alignParentRight="true"
         android:gravity="right|center"
         android:layout_alignBaseline="@id/singerName"
      >
  
        <ImageView 
            android:layout_width="wrap_content"
      		 android:layout_height="wrap_content"
      		 android:id="@+id/play_status"
      		 android:visibility="gone"
           />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:layout_below="@id/singerImage"
        android:background="#00000000"
        android:text=" "
        android:textColor="#00000000"
        android:textSize="12sp" >
    </TextView>

</RelativeLayout>