<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/local_batch_edit_music_item_content"
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/local_batch_edit_music_item_textNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="1"
            android:textColor="#505050"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/local_batch_edit_music_item_song_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="3dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#505050"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/local_batch_edit_music_item_artist_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="2dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=""
                android:textColor="#7B7B7B"
                android:textSize="12sp" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/local_batch_edit_music_item_checkbox"
            android:layout_width="53dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dip"
            android:button="@drawable/list_item_select_one_cb_click"
            android:focusable="false" />
    </LinearLayout>

</LinearLayout>