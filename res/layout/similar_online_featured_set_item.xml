<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/online_featured_set_item_image"
            android:layout_width="95dip"
            android:layout_height="95dip"
            android:layout_margin="5dip"
            android:adjustViewBounds="false"
            android:background="@drawable/dialog_item_btn_bg"
            android:padding="5dip"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:orientation="vertical" >

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >



                <TextView
                    android:id="@+id/online_select_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dip"
                    android:ellipsize="end"
                    android:maxWidth="160dip"
                    android:singleLine="true"
                    android:textColor="#505050"
                    android:textSize="15sp" />






                <TextView
                    android:id="@+id/online_featured_set_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:textColor="#7b7b7b"
                    android:textSize="13sp" />

            </LinearLayout>



            <TextView
                android:id="@+id/online_featured_set_item_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:textColor="#7b7b7b"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>

    <ImageView 
           android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/list_divider_line_img"
                android:scaleType="fitXY"
                android:id="@+id/line"
        
        />
</LinearLayout>