<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".CMMusicDemo" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <Button
                    android:id="@+id/initButton"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="初始化" />

                <Button
                    android:id="@+id/checkInit"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="初始化检查" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/login"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="短信验证码登录" />

                <Button
                    android:id="@+id/smsAuthLoginValidate"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="短信登录验证" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/ringbackMonth"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="彩铃包月类" />

                <Button
                    android:id="@+id/ringback"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="彩铃类" />
            </LinearLayout>

            <!--
            LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/buyRingBackByOpenMember"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="非特级会员一键订购彩铃" />

                <Button
                    android:id="@+id/buyRingBackByOpenRingBack"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="非彩铃用户一键订购彩铃" />
            </LinearLayout>
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/ownRingback"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="个性化彩铃类" />

                <Button
                    android:id="@+id/ringBox"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="铃音盒类" />
            </LinearLayout>

            <!--
            LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/key_order_own_ring_month"
                    android:layout_width="130dip"
                    android:layout_height="80dip"
                    android:text="非彩铃用户一键订购个性化彩铃包月" />
            </LinearLayout
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/vRing"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="振铃类" />

                <Button
                    android:id="@+id/fullsong"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="全曲类" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/cp"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="CP专属包月类" />

                <Button
                    android:id="@+id/exclusive"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="专属按次类" />
            </LinearLayout>

            <!--
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

               
               <Button
                    android:id="@+id/payment"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="第三方支付系列接口" />

               <Button
                    android:id="@+id/mvDownload"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="MV类" />
              
            </LinearLayout>
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/sr_associate_song_recommend"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="关联歌曲推荐"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/sr_associate_singer_song_recommend"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="关联歌手歌曲推荐"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center"
                android:visibility="gone" >

                <Button
                    android:id="@+id/sr_like_song_recommend"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="偏好歌曲推荐"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/sr_deal_song_recommend"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="基于用户的协同过滤推荐"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/openMem"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="会员类" />

                <Button
                    android:id="@+id/digitalAlbum"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="数字专辑类" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/musicQuery"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="歌曲查询类" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center" >

                <Button
                    android:id="@+id/get_log"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:text="查看日志" />

                <Button
                    android:id="@+id/clean_log"
                    android:layout_width="130dip"
                    android:layout_height="60dip"
                    android:layout_marginLeft="20dip"
                    android:text="清除日志" />
            </LinearLayout>

            <TextView
                android:id="@+id/logText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>