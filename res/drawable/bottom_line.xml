<?xml version="1.0" encoding="UTF-8"?>   
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->   
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >   
    <item>   
        <shape>   
            <solid android:color="#c8c7cc" />   
        </shape>   
    </item>   
    <item android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="1dp">   
        <shape>   
            <solid android:color="#dcdcdc" />   
        </shape>   
    </item>   
</layer-list>